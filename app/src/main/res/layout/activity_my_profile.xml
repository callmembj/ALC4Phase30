<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MyProfile">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1245a8"
        app:title="My Profile"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_keyboard_backspace"
    />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >

       <ImageView
           android:layout_width="130dp"
           android:layout_height="130dp"
           android:layout_marginTop="20dp"
           android:layout_gravity="center_horizontal"
           android:src="@drawable/jide"/>

       <TextView
           android:id="@+id/babajide_textView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="15dp"
           android:padding="7dp"
           android:text="Babajide Aderoju"
           android:textSize="30sp"
           android:fontFamily="@font/aclonica"
           />

       <LinearLayout
           android:id="@+id/border_layout"
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:orientation="horizontal"
           android:layout_marginTop="10dp"
           android:background="#424242"/>
           
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:orientation="vertical"
           android:padding="10dp">

           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Track: Andriod"
                android:textSize="20sp"
                android:background="#0000ff"
               android:padding="5dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/aclonica"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="8dp"
               android:text="Country: Nigeria"
               android:textSize="20sp"
               android:background="#0000ff"
               android:padding="5dp"
               android:textColor="@android:color/white"
               android:fontFamily="@font/aclonica"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="8dp"
               android:text="Email: aderojujide03@gmail.com"
               android:textSize="20sp"
               android:background="#0000ff"
               android:padding="5dp"
               android:textColor="@android:color/white"
               android:fontFamily="@font/aclonica"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="8dp"
               android:text="Phone Number: 09039344324"
               android:textSize="20sp"
               android:background="#0000ff"
               android:padding="5dp"
               android:textColor="@android:color/white"
               android:fontFamily="@font/aclonica"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="8dp"
               android:text="Stack Username: callmeMBJ"
               android:textSize="20sp"
               android:background="#0000ff"
               android:padding="5dp"
               android:textColor="@android:color/white"
               android:fontFamily="@font/aclonica"/>
       </LinearLayout>
   </LinearLayout>



</LinearLayout>



